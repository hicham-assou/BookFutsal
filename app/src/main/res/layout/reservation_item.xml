<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFADAD"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CDFFB2"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/item_center_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom du centre"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date de réservation"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/item_timeReservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heure de réservation"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/button_cancelReservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="#AC5D5D"
            android:text="cancel the reservation"
            android:textColor="@color/white"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
